<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", products_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_product_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", product_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.product._type", :default => t("activerecord.labels._type", :default => " type")) %>:</b>
          <%= @product._type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product._id", :default => t("activerecord.labels._id", :default => "")) %>:</b>
          <%= @product._id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.code", :default => t("activerecord.labels.code", :default => "Code")) %>:</b>
          <%= @product.code %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @product.name %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Branch")}") + " " + t("web-app-theme.edit", :default=> "Edit"), branch_product_path(@product), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_product_path(@product), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), product_path(@product), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>