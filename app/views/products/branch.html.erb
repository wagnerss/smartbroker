<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", products_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_product_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title">Branches (<%= @product.name %>) </h2>
    <div class="inner">
	
			<%= semantic_form_for @product do |f| %>
				<% @groups.each do |group| -%>
					<% unless group.branches.empty? %>
						<h3><%= group.name %></h3>
					  <%= f.input :brances, :as => :check_boxes, :label => false, :collection => group.branches.asc(:name) %>
					<% end %>
				<%end %>
		  <% end %>
	
			
						
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
